@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Member List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Members[0].id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members[0].firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members[0].lastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members[0].email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Members)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.firstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    <a asp-page="/Referral" asp-route-id="@item.id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

